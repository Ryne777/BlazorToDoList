@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <MatButtonLink Href="authentication/profile" Style="color:white">Hello, @context.User.Identity.Name!</MatButtonLink>
        <MatButton @onclick="BeginSignOut" Style="color:white">Log out</MatButton>
    </Authorized>
    <NotAuthorized>
        <MatButtonLink Href="authentication/register" Style="color:white">Register</MatButtonLink>
        <MatButtonLink Href="authentication/login" Style="color:white">Log in</MatButtonLink>
    </NotAuthorized>
</AuthorizeView>

@code{
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
